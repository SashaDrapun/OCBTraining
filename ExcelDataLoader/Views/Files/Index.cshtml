@{
    ViewData["Title"] = "Uploaded Files";
}

<h2>Uploaded Files</h2>

<table class="table">
    <thead>
        <tr>
            <th>File Name</th>
            <th>Upload Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var file in Model)
        {
            <tr>
                <td>@file.FileName</td>
                <td>@file.UploadDate</td>
                <td>
                    <a href="@Url.Action("ViewFileData", "Files", new { id = file.Id })" class="btn btn-primary">View Data</a>
                </td>
            </tr>
        }
    </tbody>
</table>